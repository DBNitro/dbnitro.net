function SepLine() 
{
  printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' -  
}
#
function SetClear()
{
  printf "\033c"
}
#
function STR_HELP() {
SetClear
SepLine
echo -e "\
|#[ STR_001 ] STR: VERIFY DATABASE VERSION                            |#|[ STR_002 ] STR: VERIFY INSTALLED PATCHES - DETAILS      |#|
"
SepLine
}
#
#########################################################################################################
#
# STREAMS Funtions
#
#########################################################################################################
# VERIFY STREAMS PROCESSES
#########################################################################################################
#
function STR_001() {
sqlplus -S / as sysdba <<EOF
set pages 700 lines 700 timing on long 9999999 numwidth 20 heading on echo on verify on feedback on colsep '|'
prompt ##############################################################
prompt # VERIFY STREAMS PROCESSES                                   #
prompt ##############################################################
COLUMN APPLY_NAME HEADING 'Apply|Process|Name' FORMAT A30
COLUMN QUEUE_NAME HEADING 'Apply|Process|Queue' FORMAT A30
COLUMN RULE_SET_NAME HEADING 'Positive|Rule Set' FORMAT A30
COLUMN NEGATIVE_RULE_SET_NAME HEADING 'Negative|Rule Set' FORMAT A30
COLUMN STATUS HEADING 'Apply|Process|Status' FORMAT A30
SELECT APPLY_NAME
  , QUEUE_NAME
  , RULE_SET_NAME
  , NEGATIVE_RULE_SET_NAME
  , STATUS
FROM DBA_APPLY;
quit;
EOF
}
