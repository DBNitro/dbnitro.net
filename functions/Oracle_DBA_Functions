SepLine() {
  printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' -  
}
#
SetClear() {
  printf "\033c"
}
#
DBA_HELP() {
SetClear
SepLine
???
SepLine
}
#
#########################################################################################################
#
# DATABASE Funtions
#
#########################################################################################################
DBA() {
select DBA in $(ls ${DBNITRO/}sql/DBA_[0-9]*.sql); do
  echo "@${OPT};" | sqlplus -S / as sysdba
done
}
