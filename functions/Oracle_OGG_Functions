SepLine() {
  printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' -  
}
#
SetClear() {
  printf "\033c"
}
#
OGG_HELP() {
  SetClear
  SepLine
  ls ${DBNITRO}/sql/OGG_[0-9]*.sql
  SepLine
}
#
#########################################################################################################
#
# OGG Funtions
#
#########################################################################################################
#
OGG() {
select OGG_SQL in $(cd ${DBNITRO}/sql/; ls ${DBNITRO}/sql/OGG_[0-9]*.sql) QUIT; do
  if [[ ${OGG_SQL} == "QUIT" ]]; then break 1; else echo "@${OGG_SQL};" | sqlplus -S / as sysdba; fi
done
}
#
#########################################################################################################
# Finish of the System
#########################################################################################################
