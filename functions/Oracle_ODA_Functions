SepLine() {
  printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' -  
}
#
SetClear() {
  printf "\033c"
}
#
ODA_HELP() {
SetClear
SepLine
echo -e "\
|#[ ODA_001 ] ODA: VERIFY DATABASE VERSION                            |#|[ ODA_002 ] ODA: VERIFY INSTALLED PATCHES - DETAILS      |#|
"
SepLine
}
