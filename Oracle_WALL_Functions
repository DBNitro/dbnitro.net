function SepLine() 
{
  printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' -  
}
#
function SetClear()
{
  printf "\033c"
}
#
function WALL_HELP() {
SetClear
SepLine
echo -e "\
|#[ WALL_001 ] WALL: VERIFY DATABASE VERSION                            |#|[ WALL_002 ] WALL: VERIFY INSTALLED PATCHES - DETAILS      |#|
"
SepLine
}
