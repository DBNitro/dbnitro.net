function SepLine() {
printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' -  
}
#
function SetClear() {
printf "\033c"
}
#
function OGG_HELP() {
SetClear
SepLine
echo -e "\
|#[ OGG_001 ] OGG: VERIFY GOLDENGATE PARAMETER                        |#|[ OGG_002 ] OGG: VERIFY GOLDENGATE CAPTURES, QUEUE AND STATUS   |#|
|#[ OGG_003 ] OGG: VERIFY GOLDENGATE STATE                            |#|[ OGG_004 ] OGG: VERIFY GOLDENGATE CAPTURE                      |#|
|#[ OGG_005 ] OGG: VERIFY GOLDENGATE CAPTURE DETAILS                  |#|[ OGG_006 ] OGG: VERIFY GOLDENGATE SCN                          |#|
|#[ OGG_007 ] OGG: VERIFY GOLDENGATE LOGMNR_STATS                     |#|[ OGG_008 ] OGG: VERIFY GOLDENGATE OWNER, LOG_GROUP, LOG_TYPE   |#|
|#[ OGG_009 ] OGG:                                                    |#|[ OGG_010 ] OGG:                                                |#|
|#[ OGG_011 ] OGG:                                                    |#|[ OGG_012 ] OGG:                                                |#|
|#[ OGG_013 ] OGG:                                                    |#|[ OGG_014 ] OGG:                                                |#|
|#[ OGG_015 ] OGG:                                                    |#|[ OGG_016 ] OGG:                                                |#|"
SepLine
}
